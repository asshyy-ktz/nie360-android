<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".Activities.AdminPenal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:id="@+id/tvHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Select an event"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="4dp">

                    </android.support.v7.widget.AppCompatSpinner>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Ready Screen"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp" />

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="(Tap to Select)"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp" />

                    <RelativeLayout
                        android:id="@+id/readyScreen"
                        android:layout_width="120dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"

                        >

                        <VideoView
                            android:id="@+id/readyScreenVideoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/readyScreenImgView"
                            android:layout_width="120dp"
                            android:layout_height="170dp"
                            android:background="@color/colorPrimary"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:layout_below="@+id/llTimeLimit"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Audio output"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp" />

                    <RadioButton
                        android:id="@+id/rbBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:buttonTint="@color/colorAccent"
                        android:checked="true"
                        android:text="Background Video"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rbForeground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent"
                        android:text="Foreground Video"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <RadioButton
                        android:id="@+id/rbMute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent"
                        android:text="Mute"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTimeLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:text="Max Record Time"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp" />

                    <com.chroma.app.nie360.Utils.CustomEditText
                        android:id="@+id/etTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:hint="XXX Seconds"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorGray"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Background Options"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp" />

                    <com.chroma.app.nie360.Utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="(Tap to Select)"
                        android:textColor="@color/colorWhite"
                        android:textSize="13dp" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/videoView1"
                                    android:layout_width="120dp"
                                    android:layout_height="170dp"
                                    android:layout_centerInParent="true"
                                    android:adjustViewBounds="true"
                                    android:background="@color/colorPrimary"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>

                            <com.chroma.app.nie360.Utils.CustomTextView
                                android:id="@+id/tvBackgroundTitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Background 1"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/videoView2"
                                    android:layout_width="120dp"
                                    android:layout_height="170dp"
                                    android:background="@color/colorPrimary"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>

                            <com.chroma.app.nie360.Utils.CustomTextView
                                android:id="@+id/tvBackgroundTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Background 2"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/videoView3"
                                    android:layout_width="120dp"
                                    android:layout_height="170dp"
                                    android:background="@color/colorPrimary"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>

                            <com.chroma.app.nie360.Utils.CustomTextView
                                android:id="@+id/tvBackgroundTitle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Background 3"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/videoView4"
                                    android:layout_width="120dp"
                                    android:layout_height="170dp"
                                    android:background="@color/colorPrimary"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>

                            <com.chroma.app.nie360.Utils.CustomTextView
                                android:id="@+id/tvBackgroundTitle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Background 4"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/videoView5"
                                    android:layout_width="120dp"
                                    android:layout_height="170dp"
                                    android:background="@color/colorPrimary"
                                    android:scaleType="centerCrop" />
                            </RelativeLayout>

                            <com.chroma.app.nie360.Utils.CustomTextView
                                android:id="@+id/tvBackgroundTitle5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Background 5"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp" />
                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.chroma.app.nie360.Utils.CustomTextView
                    android:id="@+id/tvPendingUploads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rectangle"
                    android:padding="8dp"
                    android:text="View Uploaded Queue"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        android:tint="@color/colorWhite" />

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:padding="6dp"
        android:src="@drawable/ic_save"
        android:tint="@color/colorWhite" />
</RelativeLayout>