<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.ReadyScreen">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000" />

    <com.chroma.app.nie360.Utils.CustomTextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:padding="20dp"
        android:text="Touch Here to start"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.chroma.app.nie360.Utils.CustomTextView
            android:id="@+id/tvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="image "
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <com.chroma.app.nie360.Utils.CustomTextView
            android:id="@+id/tvVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="video"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />
    </LinearLayout>

    <com.chroma.app.nie360.Utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Touch to select your background"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivAdminPenal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_admin"
        android:tint="@color/colorWhite" />

    <ImageView
        android:id="@+id/ivProcessingVideos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:src="@drawable/ic_hourglass"
        android:tint="@color/colorWhite" />
</RelativeLayout>